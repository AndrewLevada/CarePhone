<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:paddingStart="16dp">

    <TextView
        android:id="@+id/recycler_date"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:text="22.08.2004 12:46"
        android:textColor="@color/colorOnSurfaceLight"
        android:textSize="13sp"
        android:gravity="bottom"
        android:textAllCaps="true"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/recycler_type_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_call_received"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_date"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/recycler_phone"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:gravity="center_vertical"
        android:text="+7 65656 54 654 654"
        android:textAllCaps="true"
        android:textColor="@color/colorOnSurface"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recycler_type_icon"
        app:layout_constraintTop_toBottomOf="@+id/recycler_date" />

    <TextView
        android:id="@+id/recycler_duration"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:textSize="13sp"
        android:gravity="top"
        android:text="35 minutes"
        android:textColor="@color/colorOnSurfaceLight"
        app:layout_constraintTop_toBottomOf="@+id/recycler_phone" />

    <ImageView
        android:id="@+id/recycler_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@null" />

</androidx.constraintlayout.widget.ConstraintLayout>